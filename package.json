{
    "private": true,
    "type": "module",
    "scripts": {
        "all": "vite & npm-watch build",
        "dev": "vite",
        "build": "vite build",
        "visualize-bundles": "pnpx vite-bundle-visualizer"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.12",
        "autoprefixer": "^10.4.19",
        "laravel-vite-plugin": "^1.0.2",
        "npm-watch": "^0.12.0",
        "postcss": "^8.4.38",
        "postcss-custom-properties": "^13.3.7",
        "sass": "^1.77.1",
        "tailwindcss": "^3.4.3",
        "vite": "^5.2.11",
        "vite-bundle-visualizer": "^1.2.1"
    },
    "watch": {
        "build": {
            "patterns": [
                "resources/**/*"
            ],
            "ignore": "",
            "extensions": "js,css,scss,php",
            "runOnChangeOnly": true,
            "inherit": true,
            "delay": 1000,
            "quiet": false,
            "silent": true
        }
    },
    "dependencies": {
        "@popperjs/core": "^2.11.8",
        "alpinejs": "^3.13.8",
        "axios": "^1.6.8",
        "clipboard-polyfill": "^4.1.0",
        "shiki": "^1.4.0",
        "store2": "^2.14.3",
        "tippy.js": "^6.3.7"
    }
}
